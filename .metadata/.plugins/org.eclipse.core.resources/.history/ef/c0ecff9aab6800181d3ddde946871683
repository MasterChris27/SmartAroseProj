#include "Sensor.h"



Sensor::Sensor() {

	sensorPin = 0;
	directionIn = true;
}

Sensor::Sensor(int x,bool y) {

	sensorPin=x;
	directionIn=y; // to be debated
}

void Sensor::SetPin(int x) {

	sensorPin = x;
}

int Sensor::GetPin() {
	return sensorPin;
}

void Sensor::SetDirectionIn(bool x) {

	directionIn = x;
}

int Sensor::GetDirectionIn() {
	return directionIn;
}

//virtual int GetStatus();
//virtual void Run();
void SetConstraints(int Pin, bool Direction) {
	sensorPin = Pin;
	directionIn = Direction;
}

Sensor::~Sensor() {
	// TODO Auto-generated destructor stub
}

