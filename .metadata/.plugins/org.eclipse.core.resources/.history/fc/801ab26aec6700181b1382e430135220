#include "Valve.h"

Valve::Valve() {

	 mraa_init();
		this->currentPin=0;
	    this->digPin = mraa_gpio_init(this->currentPin);

}

Valve::Valve(int x) {

			mraa_init();
			this->currentPin=x;
		    this->digPin = mraa_gpio_init(this->currentPin);
}


void Valve::setOpen(bool x){
	this->isOpen=x;
}


bool Valve::GetStatus(){
	return this->isOpen;
}
void Valve::Apply(){
	if(isOpen) {
		mraa_gpio_write(currentPin,1);
	}else {
		mraa_gpio_write(currentPin,0);
	}
}


Valve::~Valve() {
	// TODO Auto-generated destructor stub
}

